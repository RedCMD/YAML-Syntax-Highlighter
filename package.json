{
	"name": "yaml-syntax",
	"displayName": "YAML",
	"description": "YAML Ain't Markup Language syntax",
	"publisher": "RedCMD",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.89.0"
	},
	"icon": "Official_YAML_Logo.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/RedCMD/YAML-Syntax-Highlighter.git"
	},
	"bugs": {
		"url": "https://github.com/RedCMD/YAML-Syntax-Highlighter/issues"
	},
	"homepage": "https://marketplace.visualstudio.com/items?itemName=RedCMD.yaml-syntax",
	"categories": [
		"Programming Languages",
		"Snippets"
	],
	"contributes": {
		"languages": [
			{
				"id": "yaml",
				"aliases": [
					"YAML",
					"yaml"
				],
				"extensions": [
					".yaml",
					".yml",
					".eyaml",
					".eyml",
					".cff",
					".yaml-tmlanguage",
					".yaml-tmpreferences",
					".yaml-tmtheme",
					".clang-format",
					".eslintrc",
					".yamllint",
					".yaml.erb",
					".yml.erb",
					".sls",
					".stylelintrc",
					".sublime-syntax",
					".Boxfile",
					".Kptfile",
					".Krmfile",
					".ksy"
				],
				"firstLine": "^#cloud-config",
				"configuration": "./language-configuration.json"
			},
			{
				"id": "dockercompose",
				"aliases": [
					"Compose",
					"compose"
				],
				"filenamePatterns": [
					"compose.yml",
					"compose.yaml",
					"compose.*.yml",
					"compose.*.yaml",
					"*docker*compose*.yml",
					"*docker*compose*.yaml"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "yaml",
				"scopeName": "source.yaml",
				"path": "./syntaxes/yaml.tmLanguage.json",
				"unbalancedBracketScopes": [
					"invalid.illegal",
					"meta.scalar.yaml",
					"storage.type.tag.shorthand.yaml"
				]
			},
			{
				"language": "dockercompose",
				"scopeName": "source.yaml",
				"path": "./syntaxes/yaml.tmLanguage.json"
			}
		],
		"snippets": [
			{
				"language": "yaml",
				"path": "./snippets/yaml.code-snippets"
			}
		],
		"configurationDefaults": {
			"[yaml]": {
				"editor.maxTokenizationLineLength": 100000,
				"editor.insertSpaces": true,
				"editor.tabSize": 2,
				"editor.autoIndent": "advanced",
				"diffEditor.ignoreTrimWhitespace": false
			},
			"[dockercompose]": {
				"editor.maxTokenizationLineLength": 100000,
				"editor.insertSpaces": true,
				"editor.tabSize": 2,
				"editor.autoIndent": "advanced"
			}
		}
	}
}